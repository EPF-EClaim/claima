<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="myexpenserepo"
        headerExpanded="false"
        fitContent="true"
    >
        <!-- headerText="My Claim Status" -->
        <f:content>
            <Table
                id="tb_myexpensetrepo"
                mode="SingleSelectMaster"
                width="auto"
                items="{path:'employee>/ZCLAIM_HEADER', parameters: {
                $count: true,
                $select: 'CATEGORY,CLAIM_ID,CLAIM_DATE,STATUS_ID,TOTAL' }}"
                itemPress="onRowPress"
            >
                <headerToolbar>
                    <Toolbar>
                        <!-- Title with inline count -->
                        <Title
                            text="{= ${i18n>nav_myreport} + ' (' + ${employee>/ZCLAIM_HEADER/$count} + ')'}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Purpose" />
                    </Column>
                    <Column>
                        <Text text="Claim ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{employee>CATEGORY}" />
                            <Text text="{employee>CLAIM_ID}" />
                            <Text
                                text="{
                            
                                path: 'employee>CLAIM_DATE', 
                                type: 'sap.ui.model.odata.type.Date',
                                formatOptions: { pattern: 'dd MMM yyyy' }
                                }"
                            />
                            <Text text="{employee>STATUS_ID}" />
                            <Text text="{employee>TOTAL}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</core:FragmentDefinition>

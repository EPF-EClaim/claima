<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="myexpenserepo"
        headerExpanded="false"
        fitContent="true"
    >
        <f:content>
            <Table
                id="tb_myexpensetrepo"
                headerText="My Claim Status"
                mode="SingleSelectMaster"
                width="auto"
                items="{path:'employee>/ZCLAIM_HEADER', parameters: {
                $count: true,
                $select: 'CATEGORY,CLAIM_ID,CLAIM_DATE,STATUS_ID,TOTAL' }}"
                itemPress="onRowPress"
            >
                <columns>
                    <Column>
                        <Text text="Report Purpose" />
                    </Column>
                    <Column>
                        <Text text="Report ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Active"
                    >
                        <cells>
                            <Text text="{employee>CATEGORY}" />
                            <Text text="{employee>CLAIM_ID}" />
                            <Text text="{
                            
                                path: 'employee>CLAIM_DATE', 
                                type: 'sap.ui.model.odata.type.Date',
                                formatOptions: { pattern: 'dd MMM yyyy' }
                                }" />
                            <Text text="{employee>STATUS_ID}" />
                            <Text text="{employee>TOTAL}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</core:FragmentDefinition>

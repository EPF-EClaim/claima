<!-- claima/fragment/expensetype.fragment.xml -->
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">

    <VBox class="roundedBox sapUiSmallMargin" rowGap="1rem" backgroundDesign="Solid">
        <!-- Actions toolbar -->
        <Toolbar>
        <ToolbarSpacer />
            <MenuButton text="Add Claim Type"
                        buttonMode="Split"
                        useDefaultActionOnly="true">
                <menu>
                    <Menu itemSelected="onMenuAction">
                        <MenuItem text="Create Expense" id="expense" press="onPressClaimDetails"/>
                        <MenuItem text="Scan Receipt" id="receipt"/>
                    </Menu>
                </menu>
            </MenuButton>
            <Button id="btnEdit" text="Edit" press="openConfigurationDialog" enabled="false"/>
            <Button id="btnDuplicate" text="Duplicate" press="openConfigurationDialog" enabled="false"/>
            <Button id="btnDelete" text="Delete" press="openConfigurationDialog" enabled="false"/>
        </Toolbar>

        <!-- Items table -->
        <Table id="itemsTable"
               items="{items>/results}"
               width="100%"
               growing="true"
               growingScrollToLoad="false"
               sticky="ColumnHeaders">

            <columns>
                <Column><Text text="Date"/></Column>
                <Column><Text text="Receipt"/></Column>
                <Column><Text text="Claim Type"/></Column>
                <Column><Text text="Claim Item"/></Column>
                <Column hAlign="End"><Text text="Amount"/></Column>
                <Column><Text text="Category"/></Column>
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{
                        path: 'items>START_DATE',
                        type: 'sap.ui.model.odata.type.Date',
                        formatOptions: { pattern: 'dd MMM yyyy' }
                        }"/>
                        <Text text="{items>RECEIPT_NO}"/>
                        <Text text="{items>CLAIM_TYPE_ITEM}"/>
                        <Text text="{items>CLAIM_ITEM_ID}"/>
                        <ObjectNumber number="{items>AMOUNT}" unit="{items>CURRENCY}"/>
                        <Text text="{items>STAFF_CATEGORY}"/>
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </VBox>
</core:FragmentDefinition>
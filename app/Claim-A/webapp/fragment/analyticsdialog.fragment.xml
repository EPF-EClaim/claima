<core:FragmentDefinition
    xmlns:unified="sap.ui.unified"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        title="Report Filter"
        contentWidth="50%"
        class="requestDialog">

        <f:SimpleForm
            id="analytic_create_form"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="2"
            labelSpanL="2"
            labelSpanM="2"
            labelSpanS="12"
            adjustLabelSpan="true"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2">

            <f:content>

                <!-- Trip Start Date -->
                <Label text="{i18n>req_tripstartdate}" />
                <DatePicker
                    id="analytics_tripstartdate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    value="{request>/tripstartdate}"
                    textAlign="Begin"
                    required="true" />

                <!-- Trip End Date -->
                <Label text="{i18n>req_tripenddate}" />
                <DatePicker
                    id="analytics_tripenddate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    value="{request>/tripenddate}"
                    textAlign="Begin"
                    required="true" />

                <!-- Payment Date -->
                <Label text="Payment Date" />
                <DatePicker
                    id="analytics_paydate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    value="{request>/analytics_paydate}"
                    textAlign="Begin"
                    required="true" />

                <!-- Status -->
                <Label text="Status for Pre-Approval Request / Claim record" />
                <Select
                    id="status"
                    width="100%"
                    forceSelection="false"
                    required="true"
                    items="{employee>/ZSTATUS}">
                    <core:Item key="{employee>STATUS_ID}" text="{employee>STATUS_DESC}" />
                </Select>

                <!-- Course Code -->
                <Label text="Course code" />
                <Select
                    id="Course_code"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZTRAIN_COURSE_PART}">
                    <core:Item key="{COURSE_ID}" text="{COURSE_DESC}" />
                </Select>

                <!-- Department -->
                <Label text="{i18n>department}" />
                <Select
                    id="select_department"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZDEPARTMENT}">
                    <core:Item key="{DEPARTMENT_ID}" text="{DEPARTMENT_DESC}" />
                </Select>

                <!-- GL Code -->
                <Label text="GL Code" />
                <Select
                    id="glcode"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZGL_ACCOUNT}">
                    <core:Item key="{GL_ACCOUNT_ID}" text="{GL_ACCOUNT_DESC}" />
                </Select>

                <!-- Cost Center -->
                <Label text="Cost Center" />
                <Select
                    id="cc"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZCOST_CENTER}">
                    <core:Item key="{COST_CENTER_ID}" text="{COST_CENTER_DESC}" />
                </Select>

                <!-- Claim Type -->
                <Label text="Claim Type" />
                <Select
                    id="claim_type"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZCLAIM_TYPE}">
                    <core:Item key="{CLAIM_TYPE_ID}" text="{CLAIM_TYPE_DESC}" />
                </Select>

                <!-- Claim Item -->
                <Label text="Claim Item" />
                <Select
                    id="claim_item"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZCLAIM_TYPE_ITEM}">
                    <core:Item key="{CLAIM_TYPE_ITEM_ID}" text="{CLAIM_TYPE_ITEM_DESC}" />
                </Select>

                <!-- Location -->
                <Label text="Location" />
                <Select
                    id="location"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZLOC_TYPE}">
                    <core:Item key="{LOC_TYPE_ID}" text="{LOC_TYPE_DESC}" />
                </Select>

                <!-- Event Start -->
                <Label text="{i18n>req_tripenddate}" />
                <DatePicker
                    id="analytics_eventstartdate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    textAlign="Begin" />

                <!-- Event End -->
                <Label text="Payment Date" />
                <DatePicker
                    id="analytics_eventenddate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    textAlign="Begin" />

                <!-- Individual / Group -->
                <Label text="Individual/Group" />
                <Select
                    id="grouping"
                    width="100%"
                    forceSelection="false"
                    items="{employee>/ZINDIV_GROUP}">
                    <core:Item key="{IND_OR_GROUP_ID}" text="{IND_OR_GROUP_DESC}" />
                </Select>

                <!-- Amount -->
                <Label text="Amount" />
                <TextArea id="amount" textAlign="Begin" />

                <!-- Request Type -->
                <Label text="Request Type" />
                <Select
                    id="reqtype"
                    width="100%"
                    forceSelection="false"
                    visible="{anaVM>/showRequestType}"
                    items="{employee>/ZREQUEST_TYPE}">
                    <core:Item key="{employee>REQUEST_TYPE_ID}" text="{employee>REQUEST_TYPE_DESC}" />
                </Select>

                <!-- Claim Category -->
                <Label text="Claim Category" />
                <Select
                    id="claim_cat"
                    width="100%"
                    forceSelection="false"
                    visible="{anaVM>/showClaimCategory}"
                    items="{employee>/ZCLAIM_CATEGORY}">
                    <core:Item key="{employee>CLAIM_CAT_ID}" text="{employee>CLAIM_CATEGORY_DESC}" />
                </Select>

            </f:content>
        </f:SimpleForm>

        <!-- Buttons -->
        <HBox alignItems="Center" justifyContent="End"
              class="sapUiSmallMarginEnd" columnGap="0.5rem">
            <Button
                id="analytics_placeholder_create"
                press="onClickCreateRequest_ana"
                text="{i18n>submitbtn}"
                type="Emphasized" />
            <Button
                id="analytics_placeholder_cancel"
                press="onClickCancel_ana"
                text="{i18n>req_b_cancel}" />
        </HBox>

    </Dialog>
</core:FragmentDefinition>
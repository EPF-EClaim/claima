<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    id="createreport"
>
    <Dialog id="dialogheader_createreport" title="{i18n>dialogheader_createreport}" contentWidth="50em">

            <f:SimpleForm id="dialog_createreport"
                            editable="true"
			                layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="2"
                            emptySpanL="2"
                            emptySpanM="2"
                            emptySpanS="0"
                            columnsM="1"
                            columnsL="1"
                            columnsXL="1"
                            singleContainerFullSize="false" >
                <f:content>
                    <!-- Report Purpose -->
                    <Label text="{i18n>dialog_createreport_purpose}" />
                    <Input id="input_createrport_purpose" value="{input>/report/purpose}" required="true"/>
                    
                    <!-- Trip/Report Start Date -->
                    <Label text="{i18n>dialog_createreport_startdate}" />
                    <DatePicker
                        id="datepicker_createreport_startdate"
                        value="{input>/report/startdate}"
                        required="true"
                        displayFormat="dd MMM yyyy"
                        />

                    <!-- Trip/Report End Date -->
                    <Label text="{i18n>dialog_createreport_enddate}" />
                    <DatePicker
                        id="datepicker_createreport_enddate"
                        value="{input>/report/enddate}"
                        required="true"
                        displayFormat="dd MMM yyyy"
                        />

                    <!-- Expense Category -->
                    <Label text="{i18n>dialog_createreport_category}" />
                    <Select id="select_createreport_category" selectedKey="{input>/report/category}" required="true">
                        <items>
                            <core:Item text="{i18n>claim_expcat_direct}" key="expcat_direct"/>
                            <core:Item text="{i18n>claim_expcat_auto}" key="expcat_auto"/>
                            <core:Item text="{i18n>claim_expcat_withoutrequest}" key="expcat_withoutrequest"/>
                        </items>
                    </Select>

                    <!-- Approved Amount (MYR) -->
                    <Label text="{i18n>dialog_createreport_amt_approved}" />
                    <Input id="input_createrport_amt_approved" value="{input>/report/amt_approved}" editable="false"/>

                    <!-- Comment -->
                    <Label text="{i18n>dialog_createreport_comment}" />
                    <Input id="input_createrport_comment" value="{input>/report/comment}" required="true"/>
                </f:content>
            </f:SimpleForm>
     
		<buttons>
            <!-- Attachment Email Approval -->
            <Button
                    id="button_createreport_attachment"
                    press="onCreateReport_SelectAttachment"
                    text="{i18n>dialog_createreport_attachment}"
                />

            <!-- Create -->
            <Button
                    id="button_createreport_create"
                    press="onCreateReport_Create"
                    text="{i18n>dialog_createreport_create}"
                />

            <!-- Cancel -->
			<Button
                    id="button_createreport_cancel"
                    press="onCreateReport_Cancel"
                    text="{i18n>dialog_createreport_cancel}"
                />
        </buttons>     
    </Dialog>
</core:FragmentDefinition>

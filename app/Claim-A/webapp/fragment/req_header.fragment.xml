<core:FragmentDefinition xmlns:unified="sap.ui.unified"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f">
    <VBox
        id="request_form_header_box1" 
        backgroundDesign="Solid"
        class="roundedBox sapUiSmallMargin"
        rowGap="1rem">
        <OverflowToolbar height="3rem">
            <Title text="{i18n>req_form_header_title}" titleStyle="H3"/>
            <ToolbarSpacer />
            <!-- <Button type="Default" icon="sap-icon://print" /> -->
        </OverflowToolbar>
        <form:Form 
            id="req_header1"
            layout="ColumnLayout"
            editable="false" >
            <form:layout><form:ColumnLayout /></form:layout>
            <form:formContainers>
                <form:FormContainer >
                    <form:formElements>
                        <form:FormElement label="{i18n>req_purpose}">
                            <form:fields>
                                <Text text="{request>/purpose}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_id}">
                            <form:fields>
                                <Text text="{request>/reqid}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_tripstartdate}">
                            <form:fields>
                                <Text text="{request>/tripstartdate}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_tripenddate}">
                            <form:fields>
                                <Text text="{request>/tripenddate}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_eventstartdate}">
                            <form:fields>
                                <Text text="{request>/eventstartdate}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_eventenddate}">
                            <form:fields>
                                <Text text="{request>/eventenddate}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_location}">
                            <form:fields>
                                <Text text="{request>/location}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_grptype}">
                            <form:fields>
                                <Text text="{request>/grptype}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_transport}">
                            <form:fields>
                                <Text text="{request>/transport}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_status}">
                            <form:fields>
                                <Text text="{request>/reqstatus}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_cc}">
                            <form:fields>
                                <Text text="{request>/costcenter}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_acc}">
                            <form:fields>
                                <Text text="{request>/altcostcenter}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_caa}">
                            <form:fields>
                                <Text text="{request>/cashadvamt}" ></Text>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_amt}">
                            <form:fields>
                                <Text text="{request>/reqamt}" ></Text>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_total_amt}">
                            <form:fields>
                                <Text text="{request>/totalamt}" ></Text>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_rtype}">
                            <form:fields>
                                <Text text="{request>/reqtype}" />
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_comment}">
                            <form:fields>
                                <Text text="{request>/comment}"/>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_attach1}">
                            <form:fields>
                                <Text text="{request>/doc1}"/>
                            </form:fields>
                        </form:FormElement>
                        <form:FormElement label="{i18n>req_attach2}">
                            <form:fields>
                                <Text text="{request>/doc2}"/>
                            </form:fields>
                        </form:FormElement>
                    </form:formElements>
                </form:FormContainer>
            </form:formContainers>
        </form:Form>
    </VBox>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
>
    <Dialog id="dialog_claimsubmission" title="{i18n>dialog_claimsubmission}" contentWidth="50em">

            <!-- Form Layout -->
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="2"
                emptySpanL="2"
                emptySpanM="2"
                emptySpanS="0"
                columnsM="1"
                columnsL="1"
                columnsXL="1"
                singleContainerFullSize="false" >
                <f:content>
                    <!-- Report Purpose -->
                    <Label text="{i18n>label_claimsubmission_purpose}" />
                    <Input
                        id="input_claimsubmission_purpose"
                        value="{claimsubmission_input>/claimheader/purpose}"
                        required="true"
                    />
                    
                    <!-- Claim Type -->
                    <Label text="{i18n>label_claimsubmission_claimtype}" />
                    <Text
                        id="text_claimsubmission_claimtype"
                        text="{claimsubmission_input>/claimtype/descr/type}"
                    />
                    
                    <!-- Claim Item -->
                    <Label text="{i18n>label_claimsubmission_claimitem}" />
                    <Text
                        id="text_claimsubmission_claimitem"
                        text="{claimsubmission_input>/claimtype/descr/item}"
                    />
                    
                    <!-- Submission Type -->
                    <Label text="{i18n>label_claimsubmission_subtype}" />
                    <Text
                        id="text_claimsubmission_subtype"
                        text="{claimsubmission_input>/claimtype/descr/category}"
                        visible="false"
                    />

                    <!-- Pre-Approval Request -->
                    <Label text="{i18n>label_claimsubmission_preapprovalreq}" />
                    <Text
                        id="text_claimsubmission_preapprovalreq"
                        text="{claimsubmission_input>/claimtype/requestform} {claimsubmission_input>/claimtype/descr/requestform}"
                        visible="false"
                    />

                    <!-- Approved Amount (MYR) -->
                    <Label text="{i18n>label_claimsubmission_amtapproved}" />
                    <Text
                        id="text_claimsubmission_amtapproved"
                        text="{claimsubmission_input>/claimtype/requestform_amt}"
                        visible="false"
                    />

                    <!-- Trip Start Date -->
                    <Label text="{i18n>label_claimsubmission_tripstartdate}" />
                    <DatePicker
                        id="datepicker_claimsubmission_tripstartdate"
                        value="{claimsubmission_input>/claimheader/trip_startdate}"
                        required="true"
                        displayFormat="dd-MMM-yyyy"
                        />

                    <!-- Trip End Date -->
                    <Label text="{i18n>label_claimsubmission_tripenddate}" />
                    <DatePicker
                        id="datepicker_claimsubmission_tripenddate"
                        value="{claimsubmission_input>/claimheader/trip_enddate}"
                        required="true"
                        displayFormat="dd-MMM-yyyy"
                        />

                    <!-- Event Start Date -->
                    <Label text="{i18n>label_claimsubmission_eventstartdate}" />
                    <DatePicker
                        id="datepicker_claimsubmission_eventstartdate"
                        value="{claimsubmission_input>/claimheader/event_startdate}"
                        displayFormat="dd-MMM-yyyy"
                        />

                    <!-- Event End Date -->
                    <Label text="{i18n>label_claimsubmission_eventenddate}" />
                    <DatePicker
                        id="datepicker_claimsubmission_eventenddate"
                        value="{claimsubmission_input>/claimheader/event_enddate}"
                        displayFormat="dd-MMM-yyyy"
                        />

                    <!-- Location -->
                    <Label text="{i18n>label_claimsubmission_location}" />
                    <Input
                        id="input_claimsubmission_location"
                        value="{claimsubmission_input>/claimheader/location}"
                    />

                    <!-- Alternate Cost Center -->
                    <Label text="{i18n>label_claimsubmission_altcc}" />
                    <Select
                        id="select_claimsubmission_altcc"
                        forceSelection="false"
                        selectedKey="{claimsubmission_input>/claimheader/altcc}"
                        items="{
                            path: 'employee>/ZCOST_CENTER',
                            sorter: { path: 'COST_CENTER_ID' }
                        }"
                    >
                        <core:Item key="{employee>COST_CENTER_ID}" text="{employee>COST_CENTER_ID} {employee>COST_CENTER_DESC}" />
                    </Select>
                    
                    <!-- Attachment Email Approval -->
                    <Label text="{i18n>label_claimsubmission_attachment}" />
                    <u:FileUploader
                        id="fileuploader_claimsubmission_attachment"
                        name="fileUploaderClaimSubmissionAttachment"
                        uploadUrl="upload/"
                        uploadComplete="onUploadComplete_ClaimSubmission_Attachment"
                        typeMissmatch="onTypeMissmatch_ClaimSubmission_Attachment"
                        style="Emphasized"
                        fileType="pdf"
                    >
                    </u:FileUploader>

                    <!-- Comment -->
                    <Label text="{i18n>label_claimsubmission_comment}" />
                    <Input
                        id="input_claimsubmission_comment"
                        value="{claimsubmission_input>/claimheader/comment}"
                        required="true"
                    />
                </f:content>
            </f:SimpleForm>
     
		<buttons>
            <!-- Claim Submission -->
            <Button
                id="button_claimsubmission_claimsubmission"
                press="onClaimSubmission_ClaimSubmission"
                text="{i18n>button_claimsubmission_claimsubmission}"
            />

            <!-- Cancel -->
			<Button
                id="button_claimsubmission_cancel"
                press="onCancel_ClaimSubmission"
                text="{i18n>button_claimsubmission_cancel}"
            />
        </buttons>     
    </Dialog>
</core:FragmentDefinition>

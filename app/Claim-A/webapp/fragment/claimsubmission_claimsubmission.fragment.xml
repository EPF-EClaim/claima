<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    id="createreport"
>
    <Dialog id="dialog_claimsubmission" title="{i18n>dialog_claimsubmission}" contentWidth="50em">

            <!-- Form Layout -->
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="2"
                emptySpanL="2"
                emptySpanM="2"
                emptySpanS="0"
                columnsM="1"
                columnsL="1"
                columnsXL="1"
                singleContainerFullSize="false" >
                <f:content>
                    <!-- Report Purpose -->
                    <Label text="{i18n>label_claimsubmission_purpose}" />
                    <Input
                        id="input_claimsubmission_purpose"
                        value="{claimsubmission_input>/claimheader/purpose}"
                        required="true"
                    />
                    
                    <!-- Trip/Report Start Date -->
                    <Label text="{i18n>label_claimsubmission_startdate}" />
                    <DatePicker
                        id="datepicker_claimsubmission_startdate"
                        value="{claimsubmission_input>/claimheader/startdate}"
                        required="true"
                        displayFormat="dd MMM yyyy"
                        />

                    <!-- Trip/Report End Date -->
                    <Label text="{i18n>label_claimsubmission_enddate}" />
                    <DatePicker
                        id="datepicker_claimsubmission_enddate"
                        value="{claimsubmission_input>/claimheader/enddate}"
                        required="true"
                        displayFormat="dd MMM yyyy"
                        />

                    <!-- Alternative Cost Center -->
                    <Label text="{i18n>label_claimsubmission_altcc}" />
                    <Input
                        id="input_claimsubmission_altcc"
                        value="{claimsubmission_input>/claimheader/altcc}"
                    />
                    
                    <!-- Claim Category -->
                    <Label text="{i18n>label_claimsubmission_category}" />
                    <Select
                        id="select_claimsubmission_category"
                        forceSelection="false"
                        required="true"
                        selectedKey="{claimsubmission_input>/claimheader/category}"
                        items="{
                            path: 'employee>/ZCLAIM_CATEGORY',
                            sorter: { path: 'CLAIM_CATEGORY_DESC' }
                        }">
                        <core:Item key="{employee>CLAIM_CAT_ID}" text="{employee>CLAIM_CATEGORY_DESC}" />
                    </Select>

                    <!-- Approved Amount (MYR) -->
                    <Label text="{i18n>label_claimsubmission_amtapproved}" />
                    <Input
                        id="input_claimsubmission_amtapproved"
                        value="{claimsubmission_input>/claimheader/amt_approved}"
                        editable="false"
                        visible="false"
                    />

                    <!-- Comment -->
                    <Label text="{i18n>label_claimsubmission_comment}" />
                    <Input
                        id="input_claimsubmission_comment"
                        value="{claimsubmission_input>/claimheader/comment}"
                    />
                </f:content>
            </f:SimpleForm>
     
		<buttons>
            <!-- Attachment Email Approval -->
            <Button
                id="button_claimsubmission_attachment"
                text="{i18n>button_claimsubmission_attachment}"
                enabled="false"
            />

            <!-- Claim Submission -->
            <Button
                id="button_claimsubmission_claimsubmission"
                press="onClaimSubmission_ClaimSubmission"
                text="{i18n>button_claimsubmission_claimsubmission}"
            />

            <!-- Cancel -->
			<Button
                id="button_claimsubmission_cancel"
                press="onCancel_ClaimSubmission"
                text="{i18n>button_claimsubmission_cancel}"
            />
        </buttons>     
    </Dialog>
</core:FragmentDefinition>

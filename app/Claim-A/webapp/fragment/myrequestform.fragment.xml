<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="myrequestform"
        headerExpanded="false"
        fitContent="true"
    >
        <f:content>
            <!-- Using sap.m.Table for JSONModel testing -->
            <!-- items="{myRequestform>/requestsform}" -->
            <Table
                id="tb_myrequestform"
                headerText="My Request Form"
                mode="SingleSelectMaster"
                width="auto"
                items="{path:'employee>/ZREQUEST_HEADER', parameters: {
                $count: true,
                $select: 'OBJECTIVE_PURPOSE,REQUEST_ID,START_DATE,END_DATE,AMOUNT'}}"
                itemPress="onRowPressForm"
            >
                <columns>
                    <Column>
                        <Text text="Report Purpose" />
                    </Column>
                    <Column>
                        <Text text="Report ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Active"
                        press="handlePress"
                    >
                        <cells>
                            <!--                <Text text="{myRequestform>reportpurpose}" />
                            <Text text="{myRequestform>reportid}" />
                            <Text text="{myRequestform>startdate}" />
                            <Text text="{myRequestform>status}" />
                            <Text text="{myRequestform>amount}" /> -->

                            <Text text="{employee>OBJECTIVE_PURPOSE}" />
                            <Text text="{employee>REQUEST_ID}" />
                            <Text text="{path: 'employee>START_DATE'}"
                            />
                            <Text text="{employee>END_DATE}" />
                            <Text text="{employee>AMOUNT}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</core:FragmentDefinition>

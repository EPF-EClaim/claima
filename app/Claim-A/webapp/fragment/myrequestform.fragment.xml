<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="myrequestform"
        headerExpanded="false"
        fitContent="true"
    >
        <f:content>
            <Table
                id="tb_myrequestform"
                headerText="My Pre-Approval Status"
                mode="SingleSelectMaster"
                width="auto"
                items="{path:'employee>/ZREQUEST_HEADER', parameters: {
                $count: true,
                $select: 'REQUEST_ID,OBJECTIVE_PURPOSE,EMP_ID,START_DATE,END_DATE,LOCATION,TYPE_OF_TRANSPORTATION,REQUEST_GROUP_ID,REMARK'}}"
                itemPress="onRowPressForm"
                growing="true"
            >
                <columns>
                    <Column>
                        <Text text="Report Purpose" />
                    </Column>
                    <Column>
                        <Text text="Report ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        
                    >
                        <cells>
                            <Text text="{employee>OBJECTIVE_PURPOSE}" />
                            <Text text="{employee>REQUEST_ID}" />
                            <Text text="{
                                path: 'employee>START_DATE',
                                type: 'sap.ui.model.odata.type.Date',
                                formatOptions: { pattern: 'dd MMM yyyy' } 
                            }"/>
                            <Text text="{
                                path: 'employee>END_DATE',
                                type: 'sap.ui.model.odata.type.Date',
                                formatOptions: { pattern: 'dd MMM yyyy' }}" />
                            <Text text="{employee>AMOUNT}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</core:FragmentDefinition>

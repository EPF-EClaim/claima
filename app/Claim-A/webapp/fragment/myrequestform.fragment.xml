<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="myrequestform"
        headerExpanded="false"
        fitContent="true"
    >
        <f:content>
            <Table
                id="tb_myrequestform"
                headerText="My Pre-Approval Status"
                mode="SingleSelectMaster"
                width="auto"
                items="{path:'employee>/ZREQUEST_HEADER', parameters: {
                $count: true,
                $select: 'REQUEST_ID,OBJECTIVE_PURPOSE,EMP_ID,TRIP_START_DATE,TRIP_END_DATE,REMARK,TOTAL_AMOUNT,COST_CENTER,ALTERNATE_COST_CENTRE,EVENT_START_DATE,EVENT_END_DATE,STATUS,LOCATION,TYPE_OF_TRANSPORTATION,REQUEST_TYPE_ID'}}"
                itemPress="onRowPressForm"
                growing="true"
            >
                <headerToolbar>
                    <Toolbar>
                        <!-- Title with inline count -->
                        <Title
                            text="{= ${i18n>nav_myrequest} + ' (' + ${employee>/ZREQUEST_HEADER/$count} + ')'}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Purpose" />
                    </Column>
                    <Column>
                        <Text text="Claim ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{employee>OBJECTIVE_PURPOSE}" />
                            <Text text="{employee>REQUEST_ID}" />
                            <Text
                                text="{
                                path: 'employee>TRIP_START_DATE',
                                type: 'sap.ui.model.odata.type.Date',
                                formatOptions: { pattern: 'dd MMM yyyy' } 
                            }"
                            />
                            <Text text="{employee>STATUS}" />
                            <Text text="{employee>TOTAL_AMOUNT}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</core:FragmentDefinition>

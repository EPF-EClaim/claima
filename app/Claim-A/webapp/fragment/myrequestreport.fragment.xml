<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="myrequestrepo"
        headerExpanded="false"
        fitContent="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:actions>
                    <Button
                        text="Go to Detail page 2"
                        press="onPressNavToDetail2"
                    />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <!-- Using sap.m.Table for JSONModel testing -->
            <Table
                id="tb_myrequestrepo"
                headerText="My Request Report"
                mode="SingleSelectMaster"
                width="auto"
                items="{myRequest>/requests}"
                itemPress="onRowPress"
            >
                <columns>
                    <Column>
                        <Text text="Report Purpose" />
                    </Column>
                    <Column>
                        <Text text="Report ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Active"
                        press="handlePress"
                    >
                        <cells>
                            <Text text="{myRequest>reportpurpose}" />
                            <Text text="{myRequest>reportid}" />
                            <Text text="{myRequest>startdate}" />
                            <Text text="{myRequest>status}" />
                            <Text text="{myRequest>amount}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</core:FragmentDefinition>

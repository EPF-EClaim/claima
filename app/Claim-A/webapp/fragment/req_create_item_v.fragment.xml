<core:FragmentDefinition xmlns:form2="sap.fe.macros.form"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:unified="sap.ui.unified"
    xmlns:table="sap.ui.table" >
    <VBox
        id="request_create_item_v_fragment" 
        backgroundDesign="Solid"
        class="roundedBox sapUiSmallMargin"
        rowGap="1rem">
        <VBox width="100%" height="100%" rowGap="1rem">
            <OverflowToolbar height="3rem">
                <Title text="{i18n>req_form_detail_title}" titleStyle="H4" />
                <ToolbarSpacer />
                <MenuButton text="{i18n>req_b_save_request}" buttonMode="Split" defaultAction="onSave" beforeMenuOpen="onBeforeMenuOpen" useDefaultActionOnly="true" enabled="false">
                    <menu>
                        <Menu itemSelected="onMenuAction">
                            <MenuItem text="{i18n>req_b_save_n_add}" press=".onSaveAddAnother" />
                        </Menu>
                    </menu>
                </MenuButton>
            </OverflowToolbar>
            <VBox rowGap="1rem">
                <form:Form
                    xmlns:form="sap.ui.layout.form"
                    xmlns:m="sap.m"
                    xmlns:core="sap.ui.core"
                    editable="false">

                    <form:layout>
                        <form:ColumnLayout ></form:ColumnLayout>
                    </form:layout>

                    <form:formContainers>
                        <form:FormContainer>
                            <form:formElements>

                                <!-- Claim Type -->
                                <form:FormElement label="{i18n>req_i_claim_type}">
                                    <form:fields>
                                        <m:Select editable="false" selectedKey="CT1">
                                            <items>
                                                <core:Item key="CT1" text="Claim Type 1"/>
                                                <core:Item key="CT2" text="Claim Type 2"/>
                                                <core:Item key="CT3" text="Claim Type 3"/>
                                                <core:Item key="CT4" text="Claim Type 4"/>
                                            </items>
                                        </m:Select>
                                    </form:fields>
                                </form:FormElement>

                                <!-- Estimated Amount -->
                                <form:FormElement label="{i18n>req_i_est_amt}">
                                    <form:fields>
                                        <m:Input id="estAmount_v" type="Number" textAlign="Begin" editable="false" />
                                    </form:fields>
                                </form:FormElement>

                                <!-- Start Date -->
                                <form:FormElement label="{i18n>req_i_start_date}">
                                    <form:fields>
                                        <m:DatePicker
                                            id="i_start_date_v"
                                            displayFormat="dd MMM yyyy"
                                            valueFormat="yyyy-MM-dd"
                                            placeholder="dd MMM yyyy"
                                            value="{request>/tripstartdate}"
                                            textAlign="Begin"
                                            editable="false"/>
                                    </form:fields>
                                </form:FormElement>

                                <!-- Location -->
                                <form:FormElement label="{i18n>req_i_location}">
                                    <form:fields>
                                        <m:Input id="i_location_v" textAlign="Begin" editable="false"/>
                                    </form:fields>
                                </form:FormElement>

                                <!-- Estimated Participants -->
                                <form:FormElement label="{i18n>req_i_estparticipant}">
                                    <form:fields>
                                        <m:Input id="estNoOfParticipant_v" type="Number" textAlign="Begin" editable="false" />
                                    </form:fields>
                                </form:FormElement>

                                <!-- Claim Type Item -->
                                <form:FormElement label="{i18n>req_i_claim_type_item}">
                                    <form:fields>
                                        <m:Select selectedKey="CI1" editable="false">
                                            <items>
                                                <core:Item key="CI1" text="Claim Type Item 1"/>
                                                <core:Item key="CI2" text="Claim Type Item 2"/>
                                                <core:Item key="CI3" text="Claim Type Item 3"/>
                                                <core:Item key="CI4" text="Claim Type Item 4"/>
                                            </items>
                                        </m:Select>
                                    </form:fields>
                                </form:FormElement>

                                <!-- Cash Advance -->
                                <form:FormElement label="{i18n>req_i_cashadv}">
                                    <form:fields>
                                        <m:Select id="cash_adv_v" selectedKey="no_cashadv" editable="false">
                                            <items>
                                                <core:Item key="no_cashadv" text="No"/>
                                                <core:Item key="yes_cashadv" text="Yes"/>
                                            </items>
                                        </m:Select>
                                    </form:fields>
                                </form:FormElement>

                                <!-- End Date -->
                                <form:FormElement label="{i18n>req_i_end_date}">
                                    <form:fields>
                                        <m:DatePicker
                                            id="i_end_date_v"
                                            displayFormat="dd MMM yyyy"
                                            valueFormat="yyyy-MM-dd"
                                            placeholder="dd MMM yyyy"
                                            value="{request>/tripstartdate}"
                                            textAlign="Begin"
                                            editable="false"/>
                                    </form:fields>
                                </form:FormElement>

                                <!-- Remarks -->
                                <form:FormElement label="{i18n>req_i_remarks}">
                                    <form:fields>
                                        <m:TextArea id="i_remarks_v" textAlign="Begin" editable="false"/>
                                    </form:fields>
                                </form:FormElement>

                            </form:formElements>
                        </form:FormContainer>
                    </form:formContainers>
                </form:Form>

                <VBox rowGap="0.5rem">
                    <OverflowToolbar height="3rem">
                        <Title text="{i18n>req_participant}" titleStyle="H4" />
                        <ToolbarSpacer />
                        <Button text="{i18n>req_b_download_template}" enabled="false"></Button>
                        <unified:FileUploader
                            id="fuImport"
                            icon="sap-icon://upload"
                            buttonOnly="true"
                            buttonText="{i18n>req_b_upload_list}"
                            fileType="csv,xlsx"
                            change=".onImportChange"
                            style="Emphasized"
                            enabled="false"/>
                        <Button icon="sap-icon://delete" text="{i18n>req_b_delete}" press=".onRowDeleteParticipant" enabled="false"/>
                    </OverflowToolbar>
                    <table:Table 
                        id="req_participant_table"
                        rows="{/participant}"
                        columnHeaderHeight="3rem"
                        selectionMode="None"
                        rowActionCount="0">
                        <table:Column width="25rem">
                            <Label text="{i18n>req_p_name}"></Label>
                            <table:template>
                                <Text id="participant_name_v" textAlign="Begin" text="{participant_name}" />
                            </table:template>
                        </table:Column>
                        <table:Column width="25rem">
                            <Label text="{i18n>req_p_cost_center}"></Label>
                            <table:template>
                                <Text text="cost_center" />
                            </table:template>
                        </table:Column>
                        <table:Column width="25rem">
                            <Label text="{i18n>req_p_alloc_amt}"></Label>
                            <table:template>
                                <Text id="alloc_amount_v" textAlign="End" text="{alloc_amount}" />
                            </table:template>
                        </table:Column>
                        <table:rowActionTemplate>
                            <table:RowAction>
                                <table:items>
                                    <table:RowActionItem type="Delete" press="onRowDeleteParticipant" visible="false" ></table:RowActionItem>
                                </table:items>
                            </table:RowAction>
                        </table:rowActionTemplate>
                    </table:Table>
                </VBox>
            </VBox>
        </VBox>
    </VBox>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <VBox class="sapUiContentPadding sapUiSmallMargin">

        <!-- HEADER -->
        <Toolbar >
            <Title text="ZCLAIM PURPOSE" level="H2"/>
            <ToolbarSpacer/>
            <Button id="confadd" text="+ Add New Entry" press="onAddEntry" visible="true"/>
            <Button id="confedit" text="Edit" press="onEditEntry" visible="true"/>
            <Button id="confcopy" text="Copy" press="onCopyEntry" visible="true"/>
            <Button id="confdelete" text="Delete" press="onDeleteEntry" visible="true" />
        </Toolbar>

        <!-- TABLE -->
        <Table
            id="configTable"
            mode="MultiSelect"
            inset="false"
            fixedLayout="false"
            growing="true"
            growingScrollToLoad="true"
            showSeparators="All"
            items="{ path: 'employee>/ZCLAIM_PURPOSE' }"
            selectionChange="onselectionChange"
            noDataText="No data available">
            <!-- <headerToolbar></headerToolbar> -->

            <columns>
                <!-- <Column width="2rem"/> -->
                <Column><Text text="Claim Purpose ID"/></Column>
                <Column><Text text="Claim Purpose Desc"/></Column>
            </columns>

            <items>
                <ColumnListItem vAlign="Middle" >

                    <cells>
                        <!-- Checkbox column -->
                        <!-- <Text text=""/> -->

                        <!-- Claim_Purpose_ID -->
                        <HBox visible="true">
                            <Input id= "claimpurposeid" value="{employee>CLAIM_PURPOSE_ID}" visible="false" /> 
                            <Text text="{employee>CLAIM_PURPOSE_ID}" visible="true"/>
                        </HBox>

                        <!-- Claim_Purpose Desc -->
                        <HBox visible="true">
                            <Input id= "claimpurposedesc" value="{employee>CLAIM_PURPOSE_DESC}" visible="false"/>
                            <Text text="{employee>CLAIM_PURPOSE_DESC}" visible="true"/>
                        </HBox>
                        
                    </cells>
                    <!-- <cells>
                    <core:Fragment fragmentName="claima.fragment.inputfields" type="XML" />
                    </cells> -->

                </ColumnListItem>
            </items>
        </Table>

        <!-- FOOTER -->
        <!-- <Toolbar class="sapUiMediumMarginTop">
            <ToolbarSpacer/>
            <Button text="Back" press="onBackFromConfigTable"/>
            <Button text="Save" press="onSaveConfigTable" type="Emphasized"/>
        </Toolbar> -->
        

    </VBox>

</core:FragmentDefinition>

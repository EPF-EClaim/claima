<core:FragmentDefinition
    xmlns:unified="sap.ui.unified"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="Report Filter"
        contentWidth="50%"
        class="requestDialog"
    >
        <f:SimpleForm
            id="analytic_create_form"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2"
        >
            <f:content>
                <!-- LEFT -->
                <Label text="{i18n>req_tripstartdate}" />
                <DatePicker
                    id="analytics_tripstartdate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    value="{request>/tripstartdate}"
                    textAlign="Begin"
                    required="true"
                />

                <!-- RIGHT -->
                <Label text="{i18n>req_tripenddate}" />
                <DatePicker
                    id="analytics_tripenddate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    value="{request>/tripenddate}"
                    textAlign="Begin"
                    required="true"
                />
                <Label text="Payment Date" />
                <DatePicker
                    id="analytics_paydate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    value="{request>/analytics_paydate}"
                    textAlign="Begin"
                    required="true"
                />

                <Label text="Status for Pre-Approval Request / Claim record " />
                <TextArea
                    id="status"
                    textAlign="Begin"
                    value="{request>/eventdetail1}"
                />

                <Label text="Course code" />
                <TextArea
                    id="ccode"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Department" />
                <TextArea
                    id="dept"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="GL Code" />
                <TextArea
                    id="glcode"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Cost Center" />
                <TextArea
                    id="cc"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Claim Type" />
                <TextArea
                    id="claim_type"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Claim Item" />
                <TextArea
                    id="claim_item"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Location" />
                <TextArea
                    id="location"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="{i18n>req_tripenddate}" />
                <DatePicker
                    id="analytics_eventstartdate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    textAlign="Begin"
                    required="true"
                />
                <Label text="Payment Date" />
                <DatePicker
                    id="analytics_eventenddate"
                    displayFormat="dd MMM yyyy"
                    valueFormat="yyyy-MM-dd"
                    placeholder="dd MMM yyyy"
                    textAlign="Begin"
                    required="true"
                />

                <Label text="Individual/Group" />
                <TextArea
                    id="grouping"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Amount" />
                <TextArea
                    id="amount"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Employee name" />
                <TextArea
                    id="emp_name"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Request Type" />
                <TextArea
                    id="reqtype"
                    textAlign="Begin"
                    value="Test"
                />

                <Label text="Claim Category" />
                <TextArea
                    id="claim_cat"
                    textAlign="Begin"
                    value="Test"
                />
            </f:content>
        </f:SimpleForm>

        <!-- Buttons -->
        <HBox
            alignItems="Center"
            justifyContent="End"
            class="sapUiSmallMarginEnd"
            columnGap="0.5rem"
        >
            <Button
                id="analytics_placeholder_create"
                press="onClickCreateRequest"
                text="{i18n>req_b_create}"
                type="Emphasized"
            />
            <Button
                id="analytics_placeholder_cancel"
                press="onClickCancel"
                text="{i18n>req_b_cancel}"
            />
        </HBox>
    </Dialog>
</core:FragmentDefinition>

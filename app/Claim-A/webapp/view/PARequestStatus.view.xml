<mvc:View xmlns:table="sap.ui.table" xmlns:form="sap.ui.layout.form" xmlns:f="sap.f"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	controllerName="claima.controller.RequestFormStatus"
    id="request_status_xmlview">

    <Page 
        id="request_form_status"
        floatingFooter="true"
        showHeader="false">
        <VBox
            class="roundedBox sapUiSmallMargin">
            <Table
                id="tb_myrequestform"
                headerText="My Pre-Approval Status"
                mode="SingleSelectMaster"
                width="auto"
                items="{path: 'request>/req_header_list'}"
                itemPress="openItemFromList"
                growing="true"
            >
                <headerToolbar>
                    <Toolbar>
                        <!-- Title with inline count -->
                        <Title
                            text="{= ${i18n>nav_myrequest} + ' (' + ${request>/req_header_count} + ')'}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Request ID" />
                    </Column>
                    <Column>
                        <Text text="Purpose" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Pre-Approval Amount (MYR)" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{request>REQUEST_ID}" />
                            <Text text="{request>OBJECTIVE_PURPOSE}" />
                            <Text
                                text="{
                                    path: 'request>TRIP_START_DATE',
                                    type: 'sap.ui.model.odata.type.Date',
                                    formatOptions: { pattern: 'dd MMM yyyy' } 
                                }"
                            />
                            <Text text="{request>STATUS}" />
                            <Text text="RM {
                                    path: 'request>PREAPPROVAL_AMOUNT',
                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 }
                                }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Page>
</mvc:View>
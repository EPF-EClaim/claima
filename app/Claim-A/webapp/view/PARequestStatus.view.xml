<mvc:View xmlns:form="sap.ui.layout.form" xmlns:f="sap.f"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	controllerName="claima.controller.RequestForm"
    id="request_status_xmlview">

    <Page 
        id="request_form_status"
        floatingFooter="true"
        showHeader="false">
        <Table
                id="tb_myrequestform"
                headerText="My Pre-Approval Status"
                mode="SingleSelectMaster"
                width="auto"
                items="{path:'employee>/ZREQUEST_HEADER', 
                    parameters: {
                        $count: true,
                        $select: 'REQUEST_ID,OBJECTIVE_PURPOSE,EMP_ID,TRIP_START_DATE,TRIP_END_DATE,REQUEST_GROUP_ID,REMARK,TOTAL_AMOUNT,COST_CENTER,ALTERNATE_COST_CENTER,EVENT_START_DATE,EVENT_END_DATE,STATUS,LOCATION,TYPE_OF_TRANSPORTATION,REQUEST_TYPE_ID'
                    }
                }"
                itemPress="onRowPressForm"
                growing="true"
            >
                <headerToolbar>
                    <Toolbar>
                        <!-- Title with inline count -->
                        <Title
                            text="{= ${i18n>nav_myrequest} + ' (' + ${employee>/ZREQUEST_HEADER/$count} + ')'}"
                        />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Purpose" />
                    </Column>
                    <Column>
                        <Text text="Request ID" />
                    </Column>
                    <Column>
                        <Text text="Start Date" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Amount" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{employee>OBJECTIVE_PURPOSE}" />
                            <Text text="{employee>REQUEST_ID}" />
                            <!-- <Text
                                text="{
                                path: 'employee>TRIP_START_DATE',
                                type: 'sap.ui.model.odata.type.Date',
                                formatOptions: { pattern: 'dd MMM yyyy' } 
                            }"
                            /> -->
                            <Text text="{employee>STATUS}" />
                            <!-- <Text text="{employee>TOTAL_AMOUNT}" /> -->
                            <Text text="1" />
                            <Text text="1" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
    </Page>
</mvc:View>
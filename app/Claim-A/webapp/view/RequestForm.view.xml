<mvc:View xmlns:form="sap.ui.layout.form" xmlns:f="sap.f"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	controllerName="claima.controller.RequestForm">
	
    <Page 
        id="request_form"
        floatingFooter="true"
        showHeader="false">
        <footer>
            <OverflowToolbar >
                <ToolbarSpacer />
                <Button id="req_back"           type="Back"         text="Back"             press=".onBack"                 visible="{= ${/control/0/view} === 'list' }"/>
                <Button id="req_save_draft"     type="Default"      text="Save Draft"       press=".onSaveRequestDraft"     visible="{= ${/control/0/view} === 'list' }"/>
                <Button id="req_delete"         type="Reject"       text="Delete Request"   press=".onDeleteRequest"        visible="{= ${/control/0/view} === 'list' }"/>
                <Button id="req_submit"         type="Emphasized"   text="Submit Request"   press=".onSubmitRequest"        visible="{= ${/control/0/view} === 'list' }"/>
                <Button id="req_item_cancel"    type="Default"      text="Cancel"           press=".onCancelItem"           visible="{= ${/control/0/view} === 'create' }"/>
                <Button id="req_item_save"      type="Emphasized"   text="Save"             press=".onSaveItem"             visible="{= ${/control/0/view} === 'create' }"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
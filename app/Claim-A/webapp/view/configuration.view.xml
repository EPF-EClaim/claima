<mvc:View controllerName="Configuration.controller.configuration"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:Icon="sap.ui.core.Icon"
    xmlns:ShellBar="sap.f.ShellBar"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
    height="100%"
    class="sapUiResponsiveMargin"
    >
        <Page
        id="configPage"
        title="{i18n>configtitle}"
        navButtonPress="onBackFromConfigTable"
        >
            <content>
                <ScrollContainer
                    vertical="true"
                    horizontal="false"
                    height="100%"
                    class="sapUiContentPadding">    
                    <f:GridContainer>
                        <f:layout>
                            <f:GridContainerSettings
                                columnSize="16rem"
                                rowSize="auto"
                                gap="1rem"
                            />
                        </f:layout>

                        <!-- ZCLAIM_PURPOSE -->
                        <f:Card
                            class="sapUiSmallMargin"
                            width="15rem"
                            press="onOpenConfigTable"
                        >
                            <f:customData>
                                <core:CustomData
                                    key="id"
                                    value="ZCLAIM_PURPOSE"
                                />
                            </f:customData>
                            <!--file in i18n folder is used to change the title-->
                            <f:header>
                                <cards:Header
                                    title="{i18n>conf1}"
                                />
                            </f:header>
                        </f:Card>

                        <!-- Configuration Table 2 -->
                        <f:Card
                            class="sapUiSmallMargin"
                            width="15rem"
                            press="onOpenConfigTable"
                        >
                            <f:customData>
                                <core:CustomData
                                    key="id"
                                    value="ZRISK"
                                />
                            </f:customData>
                            <f:header>
                                <cards:Header
                                    title="{i18n>conf2}"
                                />
                            </f:header>
                        </f:Card>

                        <!-- Configuration Table 3 -->
                        <f:Card
                            class="sapUiSmallMargin"
                            width="15rem"
                            press="onOpenConfigTable"
                        >
                            <f:customData>
                                <core:CustomData
                                    key="id"
                                    value="ConfigurationTable3"
                                />
                            </f:customData>
                            <f:header>
                                <cards:Header
                                    title="{i18n>conf3}"
                                />
                            </f:header>
                        </f:Card>

                        <!-- Configuration Table 4 -->
                        <f:Card
                            class="sapUiSmallMargin"
                            width="15rem"
                            press="onOpenConfigTable"
                        >
                            <f:customData>
                                <core:CustomData
                                    key="id"
                                    value="ConfigurationTable4"
                                />
                            </f:customData>
                            <f:header>
                                <cards:Header
                                    title="{i18n>conf4}"
                                />
                            </f:header>
                        </f:Card>
                    </f:GridContainer>
                </ScrollContainer>
            </content>
        </Page>
</mvc:View>
<mvc:View
    controllerName="claima.controller.analytics"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns:core="sap.ui.core">

    <ScrollContainer id="analytics" class="sapUiContentPadding" height="100%">
        <Title text="{i18n>ana_poptitle}" titleStyle="H3" />

        <VBox width="100%" class="sapUiSmallMarginTop">

            <!-- 1. Claims Report Summary -->
            <f:Card class="sapUiSmallMargin" width="auto">
                <f:content>
                    <Button
                        id="btnAnalytics1"
                        type="Transparent"
                        width="auto"
                        press=".onOpenAnalytics"
                        text="{i18n>ana_title1}">
                        <customData>
                            <core:CustomData key="target" value="analyticsClaimReportSummary"/>
                        </customData>
                    </Button>
                </f:content>
            </f:Card>

            <!-- 2. Claims Report Details -->
            <f:Card class="sapUiSmallMargin" width="auto">
                <f:content>
                    <Button
                        id="btnAnalytics2"
                        type="Transparent"
                        width="auto"
                        press=".onOpenAnalytics"
                        text="{i18n>ana_title2}">
                        <customData>
                            <core:CustomData key="target" value="analyticsClaimReportDetails"/>
                        </customData>
                    </Button>
                </f:content>
            </f:Card>

            <!-- 3. Pre-Approved Request Summary -->
            <f:Card class="sapUiSmallMargin" width="auto">
                <f:content>
                    <Button
                        id="btnAnalytics3"
                        type="Transparent"
                        width="auto"
                        press=".onOpenAnalytics"
                        text="{i18n>ana_title3}">
                        <customData>
                            <core:CustomData key="target" value="preApprovedSummary"/>
                        </customData>
                    </Button>
                </f:content>
            </f:Card>

            <!-- 4. Pre-Approved Request Details -->
            <f:Card class="sapUiSmallMargin" width="auto">
                <f:content>
                    <Button
                        id="btnAnalytics4"
                        type="Transparent"
                        width="auto"
                        press=".onOpenAnalytics"
                        text="{i18n>ana_title4}">
                        <customData>
                            <core:CustomData key="target" value="preApprovedDetails"/>
                        </customData>
                    </Button>
                </f:content>
            </f:Card>

        </VBox>
    </ScrollContainer>
</mvc:View>
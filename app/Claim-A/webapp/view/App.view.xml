<mvc:View
    controllerName="claima.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:Icon="sap.ui.core.Icon"
    xmlns:ShellBar="sap.f.ShellBar"
    xmlns:layout="sap.ui.layout"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <f:ShellBar
                showMenuButton="true"
                homeIcon="./resources/sap/ui/documentation/sdk/images/logo_sap.png"
                menuButtonPressed="onMenuButtonPress"
            />
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation
                expanded="true"
                itemPress=".onNavItemPress"
                selectedKey="dashboard"
                itemSelect=".onNavItemSelect"
            >
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        key="dashboard"
                        text="{i18n>nav_dashboard}"
                        icon="sap-icon://home"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="nav_createreport"
                        text="{i18n>nav_createreport}"
                        icon="sap-icon://add"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="createrequest"
                        text="{i18n>nav_createrequest}"
                        icon="sap-icon://sys-add"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="myreport"
                        text="{i18n>nav_myreport}"
                        icon="sap-icon://activity-items"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="myrequest"
                        text="{i18n>nav_myrequest}"
                        icon="sap-icon://document-text"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="approval"
                        text="{i18n>nav_approval}"
                        icon="sap-icon://sys-enter"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="analytics"
                        text="{i18n>nav_analytics}"
                        icon="sap-icon://business-objects-experience"
                        enabled="true"
                        expanded="false"
                    />
                    <tnt:NavigationListItem
                        key="config"
                        text="{i18n>nav_config}"
                        icon="sap-icon://action-settings"
                        enabled="true"
                        expanded="false"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="dashboard">
                <pages>
                    <ScrollContainer
                        id="dashboard"
                        horizontal="false"
                        height="100%"
                    >
                        <VBox>
                            <HBox>
                                <Panel
                                    width="20rem"
                                    height="4rem"
                                    class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                                >
                                    <HBox>
                                        <core:Icon
                                            src="sap-icon://document-text"
                                            size="25px"
                                        />
                                        <Title
                                            level="H3"
                                            text="My Claim Status"
                                            textAlign="Center"
                                            class="sapUiSmallMarginBegin"
                                        />
                                        <Title
                                            level="H3"
                                            text="{employee>/ZCLAIM_HEADER/$count}"
                                            textAlign="Center"
                                            class="sapUiSmallMarginBegin"
                                        />
                                    </HBox>
                                </Panel>
                                <Panel
                                    width="20rem"
                                    height="4rem"
                                    class="sapUiMediumMarginBeginEnd sapUiMediumMarginTopBottom"
                                >
                                    <HBox>
                                        <core:Icon
                                            src="sap-icon://activity-items"
                                            size="25px"
                                        />
                                        <Title
                                            level="H3"
                                            text="My Pre-Approval Status"
                                            textAlign="Center"
                                            class="sapUiSmallMarginBegin"
                                        />
                                        <Title
                                            level="H3"
                                            text="{employee>/ZREQUEST_HEADER/$count}"
                                            textAlign="Center"
                                            class="sapUiSmallMarginBegin"
                                        />
                                    </HBox>
                                </Panel>
                                <Panel
                                    width="20rem"
                                    height="4rem"
                                    class="sapUiMediumMarginBeginEnd sapUiMediumMarginTopBottom"
                                >
                                    <HBox>
                                        <core:Icon
                                            src="sap-icon://sys-enter"
                                            size="25px"
                                        />
                                        <Title
                                            level="H3"
                                            text="Required Approval"
                                            textAlign="Center"
                                            class="sapUiSmallMarginBegin"
                                        />
                                        <!-- <Title level="H3" text="{employee>/ZCLAIM_HEADER/$count}" textAlign="Center" class="sapUiSmallMarginBegin" /> -->
                                    </HBox>
                                </Panel>
                            </HBox>

                            <VBox>
                                <Panel
                                    width="80%"
                                    height="200px"
                                    class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                                >
                                    <HBox>
                                        <HBox
                                            alignItems="Center"
                                            width="100%"
                                        >
                                            <core:Icon
                                                src="sap-icon://document-text"
                                                size="25px"
                                            />
                                            <Title
                                                level="H3"
                                                text="{i18n>myexpensesreport} ({employee>/ZCLAIM_HEADER/$count})"
                                                textAlign="Center"
                                                class="sapUiSmallMarginBegin"
                                            />
                                        </HBox>
                                        <!-- <HBox alignItems="Center" width="100%" justifyContent="SpaceBetween"> -->
                                        <Button
                                            id="dashboard-claim"
                                            text="See All"
                                            class="sapUiLargeMarginBegin"
                                            type="Transparent"
                                            press="onClickNavigate"
                                        />
                                    </HBox>
                                    <VBox>
                                        <ScrollContainer>
                                            <Table
                                                items="{ path: 'employee>/ZCLAIM_HEADER' }"
                                                growing="true"
                                                noDataText="No data available"
                                            >
                                                <columns>
                                                    <Column
                                                        demandPopin="true"
                                                    />
                                                    <Column
                                                        demandPopin="true"
                                                    />
                                                    <Column
                                                        demandPopin="true"
                                                    />
                                                </columns>
                                                <items>
                                                    <ColumnListItem>
                                                        <cells>
                                                            <Text
                                                                text="{employee>CATEGORY}"
                                                            />
                                                            <Text
                                                                text="{employee>CLAIM_DATE}"
                                                            />
                                                            <Text
                                                                text="{employee>TOTAL}"
                                                            />
                                                        </cells>
                                                    </ColumnListItem>
                                                </items>
                                            </Table>
                                        </ScrollContainer>
                                    </VBox>
                                </Panel>
                            </VBox>

                            <VBox>
                            <Panel
                                    width="80%"
                                    height="200px"
                                    class="sapUiSmallMarginBeginEnd sapUiTinyMarginTopBottom"
                                >
                                    <HBox>
                                        <HBox
                                            alignItems="Center"
                                            width="100%"
                                        >
                                            <core:Icon
                                                src="sap-icon://activity-items"
                                                size="25px"
                                            />
                                            <Title
                                                level="H3"
                                                text="{i18n>myrequest} ({employee>/ZREQUEST_HEADER/$count})"
                                                textAlign="Center"
                                                class="sapUiSmallMarginBegin"
                                            />
                                        </HBox>
                                        <Button
                                            id="dashboard-request"
                                            text="See All"
                                            class="sapUiLargeMarginBegin"
                                            type="Transparent"
                                            press="onClickNavigate"
                                        />
                                    </HBox>
                                    <VBox>
                                        <ScrollContainer>
                                            <Table
                                            items="{ path: 'employee>/ZREQUEST_HEADER' }"
                                            growing="true"
                                            noDataText="No data available">
                                            <columns>
                                                <Column
                                                    demandPopin="true"
                                                    hAlign="Left"
                                                />
                                                <Column demandPopin="true" />
                                                <Column demandPopin="true" />
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <Text
                                                            text="{employee>LOCATION}"
                                                        />
                                                        <Text
                                                            text="{employee>START_DATE}"
                                                        />
                                                        <Text
                                                            text="{employee>AMOUNT}"
                                                        />
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                        </ScrollContainer>
                                    </VBox>
                                </Panel>
                            </VBox>
                            <VBox>
                            <Panel
                                    width="80%"
                                    height="200px"
                                    class="sapUiSmallMarginBeginEnd sapUiTinyMarginTopBottom"
                                >
                                    <HBox>
                                        <HBox
                                            alignItems="Center"
                                            width="100%"
                                        >
                                            <core:Icon
                                                src="sap-icon://sys-enter"
                                                size="25px"
                                            />
                                            <Title
                                                level="H3"
                                                text="{i18n>approval}"
                                                textAlign="Center"
                                                class="sapUiSmallMarginBegin"
                                            />
                                        </HBox>
                                        <Button
                                            id="dashboard-approval"
                                            text="See All"
                                            class="sapUiLargeMarginBegin"
                                            type="Transparent" 
                                            press="onClickNavigate"
                                        />
                                    </HBox>
                                    <VBox>
                                        <ScrollContainer>
                                            <Table
                                            items="{ path: 'employee>/ZREQUEST_GRP' }"
                                            growing="true"
                                            noDataText="No data available"
                                        >
                                            <columns>
                                                <Column
                                                    demandPopin="true"
                                                    hAlign="Left"
                                                />
                                                <Column demandPopin="true" />
                                                <Column demandPopin="true" />
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <Text
                                                            text="{employee>REQUEST_GROUP_ID}"
                                                        />
                                                        <Text
                                                            text="{employee>REQUEST_GROUP_DESC}"
                                                        />
                                                        <Text
                                                            text="{employee>END_DATE}"
                                                        />
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                        </ScrollContainer>
                                    </VBox>
                                </Panel>
                            </VBox>
                        </VBox>
                    </ScrollContainer>

                    <Page
                        id="expensereport"
                        showHeader="false"
                    >
                        <content>
                            <VBox id="main">
                                <core:Fragment
                                    fragmentName="claima.fragment.report"
                                    type="XML"
                                />
                                <VBox
                                    id="expensetypescr"
                                    visible="true"
                                >
                                    <core:Fragment
                                        fragmentName="claima.fragment.expensetype"
                                        type="XML"
                                    />
                                </VBox>
                                <VBox
                                    id="claimscr"
                                    visible="false"
                                >
                                    <core:Fragment
                                        fragmentName="claima.fragment.claimdetails"
                                        type="XML"
                                    />
                                </VBox>
                            </VBox>
                        </content>
                        <footer>
                            <Toolbar>
                                <ToolbarSpacer />
                                <Button
                                    id="cancelbtn"
                                    text="Cancel"
                                    press="onPressCancel"
                                    enabled="true"
                                    visible="false"
                                />
                                <Button
                                    id="savebtn"
                                    text="Save"
                                    press="onPressSave"
                                    enabled="true"
                                    visible="false"
                                />
                                <Button
                                    id="backbtn"
                                    text="Back"
                                    press="onPressBack"
                                    enabled="true"
                                />
                                <Button
                                    id="draft"
                                    text="Save Draft"
                                    press="onPress"
                                    enabled="false"
                                />

                                <Button
                                    id="delete"
                                    text="Delete Report"
                                    press="onPress"
                                    enabled="false"
                                />

                                <Button
                                    id="submit"
                                    text="Submit Report"
                                    press="onPress"
                                    enabled="false"
                                />
                            </Toolbar>
                        </footer>
                    </Page>
                    <ScrollContainer
                        id="config"
                        horizontal="false"
                        vertical="false"
                        height="100%"
                        class="sapUiContentPadding"
                    />
                    <!-- ================= Configuration Page ================= -->
                    <Page
                        id="configurationPage"
                        title="{i18n>configtitle}">
                        <content>
                            
                            <ScrollContainer
                                vertical="true"
                                horizontal="false"
                                height="100%"
                                class="sapUiContentPadding">
                                <f:GridContainer>
                                    <f:layout>
                                        <f:GridContainerSettings
                                            columnSize="16rem"
                                            rowSize="auto"
                                            gap="1rem"
                                        />
                                    </f:layout>
                                    <!-- <macros:Table id="claimConfig-1" metaPath= "/ZCLAIM_PURPOSE/@com.sap.vocabularies.UI.v1.LineItem" selectionMode="Multi"/> -->

                                    <!-- ZCLAIM_PURPOSE -->
                                    <f:Card
                                        class="sapUiSmallMargin"
                                        width="15rem"
                                        press="onOpenConfigTable">
                                        <f:customData>
                                            <core:CustomData
                                                key="id"
                                                value="ZCLAIM_PURPOSE"
                                            />
                                        </f:customData>
                                        <f:header>
                                            <cards:Header
                                                title="{i18n>conf1}"
                                            />
                                        </f:header>
                                    </f:Card>

                                    <!-- Configuration Table 2 -->
                                    <f:Card
                                        class="sapUiSmallMargin"
                                        width="15rem"
                                        press="onOpenConfigTable"
                                    >
                                        <f:customData>
                                            <core:CustomData
                                                key="id"
                                                value="ConfigurationTable2"
                                            />
                                        </f:customData>
                                        <f:header>
                                            <cards:Header
                                                title="{i18n>conf2}"
                                            />
                                        </f:header>
                                    </f:Card>

                                    <!-- Configuration Table 3 -->
                                    <f:Card
                                        class="sapUiSmallMargin"
                                        width="15rem"
                                        press="onOpenConfigTable"
                                    >
                                        <f:customData>
                                            <core:CustomData
                                                key="id"
                                                value="ConfigurationTable3"
                                            />
                                        </f:customData>
                                        <f:header>
                                            <cards:Header
                                                title="{i18n>conf3}"
                                            />
                                        </f:header>
                                    </f:Card>

                                    <!-- Configuration Table 4 -->
                                    <f:Card
                                        class="sapUiSmallMargin"
                                        width="15rem"
                                        press="onOpenConfigTable"
                                    >
                                        <f:customData>
                                            <core:CustomData
                                                key="id"
                                                value="ConfigurationTable4"
                                            />
                                        </f:customData>
                                        <f:header>
                                            <cards:Header
                                                title="{i18n>conf4}"
                                            />
                                        </f:header>
                                    </f:Card>
                                </f:GridContainer>
                            </ScrollContainer>
                        </content>
                    </Page>
                    <!-- ================= Configuration Page ================= -->

                    <ScrollContainer
                        id="analytics"
                        height="100%"
                        class="sapUiContentPadding"
                    >
                        <Text text="test text" />
                    </ScrollContainer>
                    <NavContainer
                        id="new_request"
                        class="sapUiContentPadding"
                        height="100%"
                        width="100%"
                    >
                        <mvc:XMLView
                            id="request_form_view"
                            viewName="claima.view.RequestForm"
                        />
                    </NavContainer>
                </pages>
                <!-- === My Request Page (added) === -->
                <Page
                    id="myrequest"
                    showHeader="false"
                    class="sapUiNoContentPadding"
                >
                    <content>
                        <core:Fragment
                            fragmentName="claima.fragment.myrequestform"
                            type="XML"
                        />
                    </content>
                </Page>
                <!-- === My Request Report (added) === -->
                <Page
                    id="myreport"
                    showHeader="false"
                    class="sapUiNoContentPadding"
                >
                    <content>
                        <core:Fragment
                            fragmentName="claima.fragment.myrequestreport"
                            type="XML"
                        />
                    </content>
                </Page>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
